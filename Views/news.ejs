<%- include('layout/header')%>

    <div class="row admin_content position-absolute d-flex">
        <h3 class="text-center">All News</h3>

        <% if(message) { %>
            <div class="alert alert-dismissible fade show alert-<%=message.type%>" role="alert">
                <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                <strong>
                    <%= message.message%>
                </strong>
            </div>

            <%}%>

                <div class="row">
                    <% if(data !='' ) { %>
                        <table class="table table-striped text-center">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Image</th>
                                    <th scope="col">Desc</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>

                            <tbody>
                                <% data.forEach((row, index)=>{ %>
                                    <tr class="align-middle">
                                        <th scope="row">
                                            <%= index + 1 %>
                                        </th>
                                        <td>
                                            <%= row.title %>
                                        </td>
                                        <td><img src="<%= row.image %>" class="img-thumbnail" width="50px" alt /></td>
                                        <td class="col-6">
                                            <%= row.desc %>
                                        </td>
                                        <td>
                                            <a href="/updateNews/<%= row._id %>" class="text-success">
                                                <i class="fas fa-edit fa-lg mx-1"></i>
                                            </a>
                                            <a href="/deleteNews/<%= row._id%>" class="text-danger">
                                                <i class="fas fa-trash fa-lg mx-1"></i>
                                            </a>
                                        </td>
                                    </tr>

                                    <% }) %>
                            </tbody>
                        </table>
                        <%} else { %>
                            <h1 class>No News found in the database</h1>
                            <% } %>
                </div>

    </div>

    <%- include('layout/footer')%>
