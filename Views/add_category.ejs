<%- include('layout/header')%>

<div class="row admin_content position-absolute d-flex">
    <h3 class="text-center">Add Category</h3>
    <div class="row ">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form action="/add_category" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for class="form-label">Name Category</label>
                    <input type="text" class="form-control"
                        id aria-describedby name="name">
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1"
                        class="form-label">Decription</label>
                    <input type="text" class="form-control"
                        id name="desc">
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1"
                        class="form-label">Image</label>
                    <input type="file" class="form-control"
                        id name="image">
                </div>
                <input type="submit" name="submit" value="Add "
                class="btn btn-primary btn-lg">
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>

</div>

<%- include('layout/footer')%>