<%- include('layout/header')%>

<div class="row admin_content position-absolute d-flex">
    <h3 class="text-center">Add Products</h3>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form class="row g-3" action="/saveProduct" method="post"
                enctype="multipart/form-data">
                <div class="col-md-6">
                    <label for class="form-label">Id</label>
                    <input type="text" class="form-control" id placeholder="id"
                        name="_id">
                </div>
                <div class="col-md-6">
                    <label for class="form-label">Name</label>
                    <input type="text" class="form-control" id
                        placeholder="name" name="name">
                </div>
                <div class="col-12">
                    <label for="inputAddress" class="form-label">Price</label>
                    <input type="text" class="form-control" id="inputAddress"
                        placeholder="Price" name="price">
                </div>
                <div class="col-12">
                    <label for="inputAddress2" class="form-label">Sale</label>
                    <input type="number" class="form-control" id="inputAddress2"
                        placeholder="sale %" name="sales">
                </div>
                <div class="col-md-12">
                    <label for="formFile" class="form-label">Image 1</label>
                    <input class="form-control" type="text" id="formFile"
                        name="image">
                </div>

                <div class="col-md-4">
                    <label for="formFile" class="form-label">Category</label>
                    <% if(categories != '') { %>

                    <select class="form-select" name="categoryId">
                        <option selected>Select Category Id</option>
                        <% categories.forEach((row, index) =>{ %>
                        <option value="<%= row.id %>"><%=
                            row.name%></option>
                        <% })%>
                    </select>

                    <% }%>
                </div>

                <div class="col-md-4">
                    <label for="formFile" class="form-label">Category</label>
                    <% if(catemb != '') { %>
                    <select class="form-select" name="categoryIdmb">
                        <option selected>Select Category Id</option>
                        <% catemb.forEach((row, index) =>{ %>
                        <option value="<%= row.id %>"><%=
                            row.name%></option>
                        <% })%>
                    </select>

                    <% }%>
                </div>

                <div class="col-md-4">
                    <label for class="form-label">Status</label>
                    <input class="form-control" type="text" name="status">
                </div>
                <div class="col-md-12">
                    <label for
                        class="form-label">Decription</label>
                    <textarea class="form-control"
                        id rows="3" name="desc"></textarea>
                </div>
                <div class="col-12">
                    <input type="submit" name="submit" value="Add Products "
                        class="btn btn-primary btn-lg">
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>

</div>

<%- include('layout/footer')%>